@model IEnumerable<PTUDW_02_KTPM.Models.TbMenu>

@foreach(var item in Model.Where(i=>i.Levels == 1))
{
    var menuID = item.MenuId;
    var menuChild = Model.Where(i => i.ParentId == menuID);
    <li class="drop-holder">
        <a href="/@item.Alias">
            @item.Title
            <i class="fa fa-chevron-down"></i>
        </a>
        @if (menuChild.Count() > 0)
        {
            <ul class="drop-menu">
                @foreach (var itemChild in menuChild)
                {
                    <li>
                        <a href="/@itemChild.Alias">@itemChild.Title</a>
                    </li>
                }
            </ul>
        }
    </li>
}
